<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_custom_title" model="ir.ui.view">
        <field name="name">res.company.form.inherit.custom.title</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="document_title" />
            </xpath>
        </field>
    </record>


    <record id="bd_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">bd.res.config.setting.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='companies']" position="before">

                <div id="custom_title_in_pos">

                    <block title="Custom Title in POS" name="custom_title_in_pos_container">

                        <setting id="custom_title_toggle" string="Custom Title in POS" company_dependent="1" help="Provide Custom Title in POS" title="Provide Custom Title in POS">
                            
                            <field name="module_point_of_sale" widget="upgrade_boolean"/>
                            
                            <div class="content-group" invisible="not module_point_of_sale" id="inter_custom_title_pos">
                                <div class="mt16 text-warning"><strong>Save</strong> this page and go to company to set-up custom title.</div>
                            </div>

                        </setting>

                        <setting id="custom_title_module_stock_account" string="Custom Title in POS" company_dependent="1" help="Provide Custom Title in POS" title="Provide Custom Title in POS" invisible="1">
                            
                            <field name="module_stock_account" widget="upgrade_boolean"/>

                        </setting>

                        <setting id="custom_title_module_barcodes" string="Custom Title in POS" company_dependent="1" help="Provide Custom Title in POS" title="Provide Custom Title in POS" invisible="1">
                            
                            <field name="module_barcodes" widget="upgrade_boolean"/>

                        </setting>

                        <setting id="custom_title_module_web_editor" string="Custom Title in POS" company_dependent="1" help="Provide Custom Title in POS" title="Provide Custom Title in POS" invisible="1">
                            
                            <field name="module_web_editor" widget="upgrade_boolean"/>

                        </setting>

                        <setting id="custom_title_module_digest" string="Custom Title in POS" company_dependent="1" help="Provide Custom Title in POS" title="Provide Custom Title in POS" invisible="1">
                            
                            <field name="module_digest" widget="upgrade_boolean"/>

                        </setting>

                        <setting id="custom_title_module_mail" string="Custom Title in POS" company_dependent="1" help="Provide Custom Title in POS" title="Provide Custom Title in POS" invisible="1">
                            
                            <field name="module_mail" widget="upgrade_boolean"/>

                        </setting>

                    </block>

                </div>

                
            </xpath>
            
        </field>
    </record>


</odoo>